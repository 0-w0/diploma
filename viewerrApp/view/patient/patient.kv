<PatientView>:
    name: "patient"
    size: root.width, root.height

    BoxLayout:
        orientation: "vertical"
        padding: 190, 40


        GridLayout:
            spacing: root.width-(150 + 190)*2
            cols: 2
            size_hint_y: None
            height: self.minimum_height

            Button:
                text: "Назад"
                size_hint: (None, None)
                size: (150, 60)
                on_release:
                    root.manager.transition.direction = "right"
                    app.root.current = "patients_list"

            Label:
                text: "ViEwErR"
                font_size: 25
                color: (0, 0, 0, 1)
                size_hint: (None, None)
                size: (150, 60)

        BoxLayout:
            orientation: "horizontal"
            padding: 0, 50

            BoxLayout:
                id: container_patient
                orientation: "vertical"

                Label:
                    text_size: root.ids.container_patient.size
                    size_hint: (1.0, None)
                    halign: "left"
                    valign: "top"
                    id: te
                    text: "Patient: "+root.patient_id
                    font_size: 25
                    color: (125/255, 125/255, 125/255, 1)

                Label:
                    text_size: root.ids.container_patient.size
                    size_hint: (1.0, None)
                    halign: "left"
                    valign: "top"
                    height: 40
                    id: sex
                    text: "Sex: "+root.sex
                    font_size: 25
                    color: (125/255, 125/255, 125/255, 1)

                Label:
                    text_size: root.ids.container_patient.size
                    size_hint: (1.0, None)
                    halign: "left"
                    valign: "top"
                    height: 40
                    id: birthday
                    text: "Birthday: "+root.birthday
                    font_size: 25
                    color: (125/255, 125/255, 125/255, 1)

            ScrollView:
                MDList:
                    spacing: 50
                    id: study_list_items
