<StartView>:
    name: "start"
	BoxLayout:
	    orientation: "vertical"
	    size: root.width, root.height
	    spacing: 35
	    padding: 200

        Label:
            text: "ViEwErR"
            font_size: 50
            color: (0, 0, 0 , 1)

		Button:
		    size_hint: (None, None)
            size: 400, 60
            pos_hint: {'center_x': .5}
			text: "Пациенты"
			on_release:
                root.manager.transition.direction = "left"
			    app.root.current = "patients_list"

		Button:
		    size_hint: (None, None)
            size: 400, 60
            pos_hint: {'center_x': .5}
			text: "Обследования"
			on_release:
			    root.manager.transition.direction = "left"
			    app.root.current = "study_list"

		Button:
		    size_hint: (None, None)
            size: 400, 60
            pos_hint: {'center_x': .5}
			text: "Просмотреть обследование"


		Button:
		    size_hint: (None, None)
            size: 400, 60
            pos_hint: {'center_x': .5}
			text: "Выход"
			on_release: app.stop()
