<StudyListView>:
    name: "study_list"
    size: root.width, root.height

    BoxLayout:
        orientation: "vertical"


        GridLayout:
            padding: 190, 40
            spacing: root.width-(150 + 190)*2
            cols: 2
            size_hint_y: None
            height: self.minimum_height

            Button:
                text: "Назад"
                size_hint: (None, None)
                size: (150, 60)
                on_release:
                    root.manager.transition.direction = "right"
                    app.root.current = "start"

            Label:
                text: "ViEwErR"
                font_size: 25
                color: (0, 0, 0, 1)
                size_hint: (None, None)
                size: (150, 60)



        BoxLayout:
            orientation: "vertical"
            padding: 190, 50
            spacing: 50

            TextInput:
                size_hint: (1, None)
                height: self.minimum_height
                multiline: False
                font_size: 25

            ScrollView:

                MDList:
                    spacing: 50
                    id: study_list_items

